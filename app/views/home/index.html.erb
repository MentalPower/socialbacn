<pre>
<% if current_user -%>
    <% current_user.update_twitter() -%>
    <% if !Tweet.blank? -%>
        <% for tweet in Tweet.joins(:user).where(:user_id => current_user.friends.select('twitter_uid')).order("id desc").limit(50) -%>
            <%=
                link_to(
                    tweet.user.name + " (" + tweet.created_at.to_s + ")",
                    "https://twitter.com/" + tweet.user.name + "/status/" +
                    tweet.id.to_s,
                    :target => "_blank"
                )
            %>
        <% end -%>
    <% end -%>
<% end -%>
</pre>
