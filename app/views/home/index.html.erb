<pre>
<% if current_user -%>
    <% current_user.update_tweets() -%>
    <% if !current_user.tweets.blank? -%>
        <% for tweet in Tweet.includes(:user).order("id desc").limit(50) -%>
            <%=
                link_to(
                    tweet.user.name + " (" + tweet.created_at.to_s + ")",
                    "https://twitter.com/" + tweet.user.name + "/status/" +
                    tweet.id.to_s,
                    :target => "_blank"
                )
            %>
        <% end -%>
    <% end -%>
<% end -%>
</pre>
